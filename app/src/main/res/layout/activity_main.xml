<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvResult2"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="252dp">


            <Button
                android:id="@+id/divide"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="/"
                android:backgroundTint="#1E6E67"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="302dp"
                tools:layout_editor_absoluteY="245dp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="167dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:text="C"
                android:backgroundTint="#1E6E67"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="243dp" />


            <Button
                android:id="@+id/plus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="+"
                android:backgroundTint="#1E6E67"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="243dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="1"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="393dp" />

            <Button
                android:id="@+id/two"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="2"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="393dp" />


            <Button
                android:id="@+id/three"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="3"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="192dp"
                tools:layout_editor_absoluteY="393dp" />


            <Button
                android:id="@+id/multiply"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:text="*"
                android:backgroundTint="#1E6E67"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="302dp"
                tools:layout_editor_absoluteY="345dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/four"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="4"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="482dp" />

            <Button
                android:id="@+id/five"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="5"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="106dp"
                tools:layout_editor_absoluteY="482dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="6"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="202dp"
                tools:layout_editor_absoluteY="482dp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="-"
                android:backgroundTint="#1E6E67"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="302dp"
                tools:layout_editor_absoluteY="449dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/seven"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="7"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="571dp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="8"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="571dp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="9"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="202dp"
                tools:layout_editor_absoluteY="571dp" />


            <Button
                android:id="@+id/equal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:backgroundTint="#1E6E67"
                android:text="="
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="302dp"
                tools:layout_editor_absoluteY="559dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zero"
                android:layout_width="118dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="0"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="653dp" />

            <Button
                android:id="@+id/point"
                android:layout_width="89dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="."
                android:textSize="30sp"
                app:cornerRadius="40dp"
                tools:layout_editor_absoluteX="183dp"
                tools:layout_editor_absoluteY="661dp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />



</androidx.constraintlayout.widget.ConstraintLayout>